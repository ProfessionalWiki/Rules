{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"rules": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"conditions": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"type": {
									"type": "string",
									"enum": ["inCategory"]
								},
								"categories": {
									"type": "array",
									"items": {
										"type": "string"
									},
									"minItems": 1
								}
							},
							"required": ["type", "categories"],
							"additionalProperties": false
						}
					},
					"actions": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"type": {
									"type": "string",
									"enum": ["addCategory"]
								},
								"category": {
									"type": "string"
								}
							},
							"required": ["type"],
							"additionalProperties": false
						}
					}
				},
				"required": ["name"],
				"additionalProperties": false
			}
		}
	},
	"required": ["rules"],
	"additionalProperties": false
}
