{
	"name": "professional-wiki/rules",
	"type": "mediawiki-extension",
	"description": "Automatically categorize MediaWiki pages",
	"keywords": [
		"MediaWiki"
	],
	"homepage": "https://professional.wiki/en/extension/rules",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Professional Wiki",
			"email": "info@Professional.Wiki",
			"homepage": "https://Professional.Wiki"
		}
	],
	"require": {
		"php": ">=8.1",
		"composer/installers": "^2|^1.0.1"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.0.1",
		"mediawiki/mediawiki-codesniffer": "^45.0.0"
	},
	"extra": {
		"installer-name": "Rules"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
