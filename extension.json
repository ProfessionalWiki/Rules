{
	"name": "Rules",
	"license-name": "GPL-2.0-or-later",
	"version": "0.0.0",
	"author": [
		"[https://Professional.Wiki/ Professional Wiki]"
	],
	"url": "https://professional.wiki/en/extension/rules",
	"namemsg": "rules-message",
	"descriptionmsg": "rules-description",
	"manifest_version": 2,
	"requires": {
		"MediaWiki": ">= 1.43.0"
	},
	"MessagesDirs": {
		"Rules": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"RulesAlias": "Rules.alias.php"
	},
	"ResourceFileModulePaths": {
		"localBasePath": "modules",
		"remoteExtPath": "Rules/modules"
	},
	"ResourceModules": {
		"ext.rules": {
			"class": "MediaWiki\\ResourceLoader\\CodexModule",
			"dependencies": [
				"vue"
			],
			"packageFiles": [
				"ext.rules/init.js",
				"ext.rules/types.js",
				"ext.rules/components/App.vue",
				"ext.rules/components/EditRule.vue",
				"ext.rules/components/FormOption.vue",
				"ext.rules/components/FormOptions.vue",
				"ext.rules/components/FormSection.vue",
				"ext.rules/components/MultiTextInput.vue",
				"ext.rules/components/RuleActions.vue",
				"ext.rules/components/RuleConditions.vue",
				"ext.rules/components/RulesTable.vue",
				"ext.rules/composables/useRules.js",
				"ext.rules/utils/ruleTransformers.js",
				{
					"name": "ext.rules/icons.json",
					"callback": "MediaWiki\\ResourceLoader\\CodexModule::getIcons",
					"callbackParam": [
						"cdxIconAdd",
						"cdxIconEdit",
						"cdxIconEllipsis",
						"cdxIconPrevious",
						"cdxIconTrash"
					]
				}
			],
			"codexComponents": [
				"CdxButton",
				"CdxDialog",
				"CdxField",
				"CdxIcon",
				"CdxLabel",
				"CdxMenuButton",
				"CdxTable",
				"CdxTextInput"
			],
			"messages": [
				"rules-table-caption",
				"rules-table-column-name",
				"rules-table-column-conditions",
				"rules-table-column-actions",
				"rules-table-empty-state",
				"rules-table-add-rule",
				"rules-table-edit-rule",
				"rules-table-delete-rule",
				"rules-table-more-actions",
				"rules-edit-rule-save",
				"rules-edit-rule-name-label",
				"rules-edit-rule-condition-label",
				"rules-edit-rule-condition-in-category",
				"rules-edit-rule-condition-add",
				"rules-edit-rule-action-label",
				"rules-edit-rule-action-add-category",
				"rules-multi-text-input-remove-item",
				"rules-operator-and",
				"rules-table-condition-in-category",
				"rules-table-action-add-category",
				"rules-notification-added-rule",
				"rules-notification-updated-rule",
				"rules-notification-deleted-rule"
			]
		}
	},
	"AutoloadNamespaces": {
		"ProfessionalWiki\\Rules\\": "src/"
	},
	"TestAutoloadNamespaces": {
		"ProfessionalWiki\\Rules\\Tests\\": "tests/phpunit/"
	},
	"SpecialPages": {
		"Rules": {
			"class": "ProfessionalWiki\\Rules\\EntryPoints\\SpecialRules",
			"services": [
				"TitleFactory"
			]
		}
	},
	"Hooks": {
		"BeforePageDisplay": "rules",
		"ContentHandlerDefaultModelFor": "rules"
	},
	"HookHandlers": {
		"rules": {
			"class": "ProfessionalWiki\\Rules\\EntryPoints\\RulesHooks",
			"services": [
				"TitleFactory"
			]
		}
	},
	"type": "other"
}
